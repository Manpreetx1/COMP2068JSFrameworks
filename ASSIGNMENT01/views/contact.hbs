<div class="contact-page">
    <div class="container section fade-in">
        <h2 class="text-center mb-4">Get in Touch ðŸ“©</h2>
        <p class="text-center">Feel free to reach out for any project collaborations or inquiries.</p>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form action="/send-message" method="POST" class="contact-form">
                    <div class="mb-3">
                        <label for="name" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Your Message</label>
                        <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</div>
