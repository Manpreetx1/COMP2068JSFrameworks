<h1 class="mb-4 text-center text-primary">All Recipes</h1>

<div class="text-center mb-4">
  <a href="/" class="btn btn-outline-secondary">‚Üê Back to Home</a>
</div>

{{#if recipes.length}}
  <div class="row">
    {{#each recipes}}
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{this.category}}</h6>
            <p><strong>Ingredients:</strong> {{this.ingredients}}</p>
            <p><strong>Instructions:</strong> {{this.instructions}}</p>
            <p class="text-muted">Posted on: {{this.createdAt}}</p>

            <div class="d-flex justify-content-between">
              <a href="/recipes/edit/{{this._id}}" class="btn btn-warning btn-sm">Edit</a>
              <form action="/recipes/delete/{{this._id}}" method="POST" onsubmit="return confirm('Are you sure?');">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <p class="text-center">No recipes found.</p>
{{/if}}
